{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	- S'inscrire
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('registration') }}
{% endblock %}

{% block javascripts %}
	{{ parent() }}
{% endblock %}

{% block body %}
	<main class="registration-form my-5 px-2">
		<div class="container p-5 rounded-3 border" data-aos="fade-in">
			<div class="d-flex justify-content-center">
				<h1 class="position-relative text-center w-fit mb-5 px-2">
					<img src="{{ asset('build/images/title_underline_orange.png') }}" class="title-underline" alt="">Inscription
				</h1>
			</div>
			{{ form_start(form) }}
			<h2 class="h4 mb-4">Ã‰tape:
				{{ app.session.get('step') ?? 1 }}/3
			</h2>
			{{ form_widget(form) }}
			<div class="d-flex {% if app.session.get('step') > 1 %}justify-content-between {% else %} justify-content-end {% endif %}">
				{% if app.session.get('step') > 1 %}
					<a href="{{path('app_return')}}" class="btn btn-outline-dark">
						<i class="bi bi-arrow-left-square"></i>
						Retour
					</a>
				{% endif %}
				<button class="btn btn-dark">
				{% if app.session.get('step') > 2 %}
					<i class="bi bi-pencil-square"></i>
						S'inscrire 
				{% else %}
					<i class="bi bi-arrow-right-square"></i>
					Suivant 
				{% endif %}
				</button>
			</div>
			{{ form_end(form) }}
		</div>
	</main>
{% endblock %}
