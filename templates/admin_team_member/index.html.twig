{% extends 'base.html.twig' %}

{% block title %}Membres de l'équipe{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-secondary">Membres de l'équipe</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Poste occupé</th>
                <th>Description</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for team_member in team_members %}
            <tr>
                <td>{{ team_member.name }}</td>
                <td>{{ team_member.position }}</td>
                <td>{{ team_member.description }}</td>
                <td>
               <div class="btn bg-dark"> <i class="bi bi-pen"></i>
                    <a href="{{ path('admin_team_member_show', {'id': team_member.id}) }}">voir</a>
                    </div>
                    <i class="bi bi-pen"></i>
                    <a href="{{ path('admin_team_member_edit', {'id': team_member.id}) }}">éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_team_member_new') }}">Create new</a>
{% endblock %}
