{% extends 'dj_dashboard/dj_dashboard_base.html.twig' %}

{% block title %}
	{{ parent() }}
	- Profil
{% endblock %}

{% block content %}
	<main class="container-fluid dj-profile artist-documents d-flex flex-column align-items-center">
		<div class="dj-profile-card p-5 col-xxl-9 mt-5 mb-4">
		<h1 class="mt-lg-3 mb-2">
			{% if app.request.attributes.get('_route') == 'dashboard_dj_profile' %}
				Informations personnelles
			{% elseif app.request.attributes.get('_route') == 'dashboard_dj_artist' %}
				Profil d'artiste 
			{% else %}
				Documents 
			{% endif %}
		</h1>
		<div class="row d-flex justify-content-center">
			<div class="card base col-lg-12 py-3 my-3">
				{{ form_start(form) }}
				{{ form_widget(form) }}
			</div>
			<div class="d-flex justify-content-center">
				<button class="btn btn-outline-primary text-dark px-5 my-4">
					<i class="bi bi-pen pe-2"></i>Modifier</button>
			</div>
				{{ form_end(form) }}
			</div>
		</main>
{% endblock %}
