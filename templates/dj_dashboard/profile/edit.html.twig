{% extends 'dj_dashboard/dj_dashboard_base.html.twig' %}

{% block title %}
	{{ parent() }}
	- Profil
{% endblock %}

{% block content %}
	<main class="container">
		<h1 class="my-5">Profil</h1>

		<div class="row d-flex justify-content-center">
			<div class="card base col-lg-9 py-3 my-3">
				{{ form_start(form) }}
				{{ form_widget(form) }}
				{{ form_end(form) }}
			</div>

			<div class="d-flex justify-content-center">
				<button class="btn btn-dark my-4">
					<i class="bi bi-pen pe-2"></i>Modifier</button>
			</div>

		</main>
	{% endblock %}
