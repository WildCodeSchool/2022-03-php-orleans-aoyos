{% extends 'dj_dashboard/dj_dashboard_base.html.twig' %}

{% block title %}
	{{ parent() }}
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}

{% block javascripts %}
	{{ parent() }}
{% endblock %}

{% block content %}
	<main class="w-100 dj-show-reservation">
		<div class="container-fluid d-flex flex-column align-items-center my-5">
			<div class="dj-show-reservation-card p-5 w-50">
			<h1 class="mt-3 mb-2">
				{{ reservation.eventType }}
			</h1>
                <h2 class="text-primary text-shadow">{{ reservation.company }}</h2>
                <p class="h5 text-muted">{{ reservation.dateStart ? reservation.dateStart|date('d-m-Y H:i') : '' }} <i class="bi bi-arrow-right"></i>
                {{ reservation.dateEnd ? reservation.dateEnd|date('d-m-Y H:i') : '' }}</p>
				<hr/>
				<h3 class="text-muted">Technique</h3>
				<div class="d-flex"><p class="text-primary dj-property">Nombre d'attendants <i class="bi bi-arrow-right"></i></p> <p class=""> &nbsp {{ reservation.attendees }} personnes</p></div>
				<div class="d-flex"><p class=" text-primary dj-property">Genre <i class="bi bi-arrow-right"></i> </p> <p class=""> </div>
				<div class="d-flex"><p class="text-primary dj-property">Salaire <i class="bi bi-arrow-right"></i></p> <p class=""> </div>
				<hr/>
				<h3 class="text-muted">Informations</h3>
				<div class="d-flex"><p class="text-primary dj-property">Localisation <i class="bi bi-arrow-right"></i></p><p class=""> &nbsp{{ reservation.address }}</p></div>
				<div class="d-flex"><p class="text-primary dj-property">Téléphone <i class="bi bi-arrow-right"></i></p><p class=""> &nbsp{{ reservation.phone }}</p></div>
				<div class="d-flex"><p class="text-primary dj-property">E-mail <i class="bi bi-arrow-right"></i></p> <p class=""> &nbsp {{ reservation.email }}</p></div>
				<div class="d-flex"><p class="text-primary dj-property">Commentaire d'Aoyos <i class="bi bi-arrow-right"></i></p> <p class=""> &nbsp " "</p></div>
				<hr/>
			<div class="btn-section w-100">
			{% if reservation.artist is defined and reservation.artist == app.user.artist %}
				<a href="#" class="btn btn-outline-danger btn-lg w-100 mx-2 ">Annuler</a>
			{% elseif reservation.artist is not null and reservation.artist != app.user.artist %}
			<p></p>
			{% else %}
			{{ include('dj_dashboard/reservation/_accept_reservation.html.twig') }}
			{% endif %}
			</div>
			</div>
		</div>
	</main>
{% endblock %}
