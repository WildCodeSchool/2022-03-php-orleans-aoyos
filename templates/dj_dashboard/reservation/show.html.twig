{% extends 'dj_dashboard/dj_dashboard_base.html.twig' %}

{% block title %}
	{{ parent() }}
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}

{% block javascripts %}
	{{ parent() }}
{% endblock %}

{% block content %}
	<main class="w-100 dj-show-reservation">
		<div class="container-fluid d-flex flex-column align-items-center my-5">
			<div class="dj-show-reservation-card p-5 col-xxl-6">
				<h1 class="mt-3 mb-2">
					{{ reservation.eventType }}
				</h1>
				<h2 class="text-primary text-shadow">{{ reservation.company }}</h2>
				<p class="h5 text-muted">{{ reservation.dateStart ? reservation.dateStart|date('d-m-Y H:i') : '' }}
					<i class="bi bi-arrow-right"></i>
					{{ reservation.dateEnd ? reservation.dateEnd|date('d-m-Y H:i') : '' }}</p>
				<hr/>
				<h3 class="text-muted">Technique</h3>
				<div class="d-flex">
					<p class="dj-property text-nowrap">Nombre de participants
						<i class="bi bi-arrow-right"></i>
					</p>
					<p>
						&nbsp
						{{ reservation.attendees }}
						personnes</p>
				</div>
				<div class="d-flex">
					<p class="dj-property text-nowrap">Genre
						<i class="bi bi-arrow-right"></i>
					</p>
					<p></p>
				</div>
				<div class="d-flex">
					<p class="dj-property text-nowrap">Salaire
						<i class="bi bi-arrow-right"></i>
					</p>
					<p></p>
				</div>
				<hr/>
				<h3 class="text-muted">Informations</h3>
				<div class="d-flex">
					<p class="dj-property text-nowrap">Localisation
						<i class="bi bi-arrow-right"></i>
					</p>
					<p>
						&nbsp{{ reservation.address }}</p>
				</div>
				<div class="d-flex">
					<p class="dj-property text-nowrap">Téléphone
						<i class="bi bi-arrow-right"></i>
					</p>
					<p>
						&nbsp{{ reservation.phone }}</p>
				</div>
				<div class="d-flex">
					<p class="dj-property text-nowrap">E-mail
						<i class="bi bi-arrow-right"></i>
					</p>
					<p>
						&nbsp
						{{ reservation.email }}</p>
				</div>
					<p class="dj-property text-nowrap">Commentaire d'Aoyos
						<i class="bi bi-arrow-right"></i>
					</p>
					<p>
						&nbsp {{ reservation.commentAdmin }}</p>
				<hr/>

				<div class="btn-section w-100">

					{% if reservation.artist is defined and reservation.artist == app.user.artist %}
				    {{ include('dj_dashboard/reservation/_cancel_reservation.html.twig') }}
					{% elseif reservation.artist is empty and reservation.status != 'Rejected' %}
						{% include 'dj_dashboard/reservation/_accept_reservation.html.twig' %}
					{% else %}
						<p class="text-center">Cet évènement est déjà réservé par un autre DJ.</p>
					{% endif %}
				</div>
			</div>
		</div>
	</main>
{% endblock %}
