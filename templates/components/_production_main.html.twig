<section class="production mt-5 py-5">
	<div class="container-fluid d-flex flex-column align-items-center position-relative">
		<h1 class="py-4 mt-0 mb-4 position-relative" data-aos="fade-up">
			<img src="{{ asset('build/images/title_underline_blue.png') }}" class="title-underline" alt="">Nos réalisations</h1>
		<div class="row mx-3">
			<div class="col-12">
				<div id="production-carousel" class="carousel slide" data-bs-ride="carousel">
					<div class="carousel-inner">
						{% if productions is not empty %}
							{% set openCarrouselDiv = true %}
							{% for production in productions %}
								{% if openCarrouselDiv %}
									{% set openCarrouselDiv = false %}
									<div class="carousel-item {% if loop.index == 1 %}active{% endif %}">
										<div class="row mx-3 justify-content-center">
										{% endif %}
										<div class="col-lg-3 px-0 m-4">
											<div class="card shadow border border-secondary" data-aos="fade-in">
												<img src="{{ production.image }}" class="card-img-top border-bottom border-dark" alt="{{ production.title }}">
												<div class="card-body d-flex flex-column justify-content-around pb-3">
													<h5 class="card-title w-fit mx-auto text-center text-light bg-dark border border-light p-3">{{ production.title }}</h5>
													<div class="card-text">{{ production.description }}</div>
												</div>
											</div>
										</div>
										{% if loop.index % 3 == 0 or loop.last %}
											{% set openCarrouselDiv = true %}
										</div>
									</div>
								{% endif %}
							{% endfor %}
						{% else %}
							<h2 class="h3 text-center">Aucune réalisation</h2>
						{% endif %}
					</div>
				</div>
			</div>
			<div class="col-12 text-center">
				<a class="text-decoration-none me-5" href="#production-carousel" role="button" data-bs-slide="prev">
					<i class="bi bi-arrow-left-square-fill h1 text-dark"></i>
				</a>
				<a class="text-decoration-none" href="#production-carousel" role="button" data-bs-slide="next">
					<i class="bi bi-arrow-right-square-fill h1 text-dark"></i>
				</a>
			</div>
		</div>
	</div>
</section>
