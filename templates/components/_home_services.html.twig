<a class="anchor" id="services"></a>
<section class="services my-5 d-flex flex-column align-items-center position-relative">
	<div class="container d-flex flex-column align-items-center">
		<h1 class="py-4 mt-0 mb-4 position-relative">
			<img src="{{ asset('build/images/title_underline_orange.png') }}" class="title-underline" alt="">Nos services</h1>

		<div class="row g-0 gap-5 justify-content-center">
			{% if articles is not empty %}
				{% for article in articles %}
					<div class="card shadow border border-primary col-lg-5 col-md-12 d-flex align-items-center flex-column flex-md-row" data-aos="fade-up">
						<div class="col-lg-6">
							<img src="{{ asset('uploads/images/article/' ~ article.image) }}" class="img-services-card" alt="service DJ">
						</div>
						<div class="col-lg-6 d-flex flex-column justify-content-between">
							<div class="card-body">
								<div class="h-25 mb-3">
									<h5 class="card-title text-center text-light bg-dark border border-light p-3">{{ article.title }}</h5>
								</div>
								<p class="card-text py-3">{{ article.description | u.truncate(100, '...', false) | raw}}.</p>
								<div class="text-end">
									<a href="{{ path('app_article', {'_fragment': article.title|url_encode }) }}" class="text-decoration-none fst-italic py-3">En savoir plus</a>
								</div>
							</div>
						</div>
					</div>
				{% endfor %}
				<a href="{{ path('app_article') }}" class="btn btn-outline-primary text-dark col-md-2 mb-5">Voir plus</a>
			{% else %}
			<h2 class="h4 mb-5 text-center">Aucun service</h2>
			{% endif %}
		</div>
	</div>
</section>
