<div class="col-lg-6 my-3">
	<div class="card-dj shadow border border-dark rounded-3 w-100 h-100">
		<div class="d-lg-flex h-100 rounded-3 admin-djs">
			<div class="d-flex flex-column justify-content-around align-items-start px-5 rounded-3 col-lg-6">
				<h1 class="h4 text-light">{{ artist.artistname }}</h1>
				<div class="d-none d-lg-flex flex-column">
					<p class="card-text text-light d-flex fs-6">
						<i class="bi bi-person me-2"></i>
						{{ artist.fullname }}</p>
				</div>
				<div class="d-none d-lg-flex musical-styles-list">
					<i class="bi bi-music-note text-light"></i>
					<ul class="ps-2">
						{% for style in artist.musicalStyles %}
							<li class="list-unstyled text-light p-0">{{ style.name }}</li>
						{% endfor %}
					</ul>
				</div>
			</div>
			<div class="d-flex flex-column justify-content-between col-lg-6">
				<div class="my-3 flex-grow-1 justify-content-around flex-column d-flex px-2">

					<p class="card-text m-0 my-2">
						<i class="bi bi-telephone-fill me-1"></i>
						{{ artist.phone }}
					</p>
					<p class="d-none d-lg-block card-text m-0 my-2">
						<i class="bi bi-at me-1"></i>
						{{ artist.email }}
					</p>
					<p class="d-none d-lg-block card-text m-0 my-2">
						<i class="bi bi-geo-alt-fill me-1"></i>
						{{ artist.address }}
					</p>
				</div>
				<div class="w-100 pe-lg-3 pb-lg-3 pb-2">
					<div class="w-100 px-2 text-end">
						<a href="{{ path('admin_dj_show', {'id': artist.id}) }}" class="btn btn-outline-dark mx-2 mb-2 px-4">DÃ©tails</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
