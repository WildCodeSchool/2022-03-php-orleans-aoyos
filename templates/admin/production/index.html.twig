{% extends 'admin/admin_base.html.twig' %}

{% block title %}{{ parent() }} - Liste des réalisations{% endblock %}

{% block content %}
    <main class="container">
    <h1 class="my-5">Réalisations</h1>
    <div class="w-100 d-flex justify-content-end">
        <a class="btn btn-outline-dark px-3 me-2" href="{{ path('app_admin_production_new') }}">
            <i class="bi bi-plus-square"></i>
            Ajouter
        </a>
    </div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Description</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for production in productions %}
            <tr>
                <td class="align-middle w-25">{{ production.title }}</td>
                <td class="align-middle w-100">{{ production.description |u.truncate(50, '...', false) }}</td>
                <td class="align-middle">
                    <a class="btn btn-outline-dark btn-sm text-nowrap px-3 my-2" href="{{ path('app_admin_production_edit', {'id': production.id}) }}">
                        <i class="bi bi-pen"></i>
                        Éditer
                    </a>
                </td>
                <td class="align-middle">
                    {% include "admin/production/_delete_form.html.twig" %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucune réalisation trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</main>
{% endblock %}
