{% extends 'admin/admin_base.html.twig' %}

{% block title %}{{ parent() }} - Liste des réalisations{% endblock %}

{% block body %}
    <main class="container-fluid p-5">
    <h1 class="mb-5">Liste des réalisations</h1>
    <a class="btn btn-primary pb-0 mb-3" href="{{ path('app_admin_production_new') }}">
        <i class="bi bi-plus-square"></i>
        Ajouter
    </a>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Description</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for production in productions %}
            <tr>
                <td>{{ production.title }}</td>
                <td>{{ production.description }}</td>
                <td class="align-middle">
                    <a class="btn btn-outline-secondary btn-sm text-nowrap pb-0" href="{{ path('app_admin_production_edit', {'id': production.id}) }}">
                        <i class="bi bi-pen"></i>
                        Éditer
                    </a>
                </td>
                <td class="align-middle">
                    {% include "admin_production/_delete_form.html.twig" %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucune réalisation trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</main>
{% endblock %}
