{% extends "base.html.twig" %}

{% block title %}{{ parent() }} | Admin
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('admin') }}
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('sidebar') }}
{% endblock %}

{% block navbar %}
	{% include 'components/_admin_topBar.html.twig' %}
{% endblock %}

{% block message %}
{% endblock %}

{% block body %}
	<div class="d-flex">
		{% include 'components/_admin_sidebar.html.twig' %}
		<div class="mx-auto">
			{% for category, messages in app.flashes %}
				{% for message in messages %}
					<div class="mt-3 text-center alert alert-{{ category }}">
						{{ message }}
					</div>
				{% endfor %}
			{% endfor %}
			{% block content %}
			{% endblock %}
		</div>
	</div>
{% endblock %}

{% block footer %}
{% endblock %}
