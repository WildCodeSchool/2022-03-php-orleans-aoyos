{% extends 'admin/admin_base.html.twig' %}

{% block title %}
	{{ parent() }}
	- Liste de l'équipe
{% endblock %}

{% block content %}
	<div class="container">
		<h1 class="my-5">Membres de l'équipe</h1>
		<div class="w-100 d-flex justify-content-end">
			<a class="btn btn-outline-dark px-3 me-2" href="{{ path('admin_team_member_new') }}">
				<i class="bi bi-plus-square"></i>
				Ajouter
                </a>
		</div>
		<table class="table table-hover">
			<thead>
				<tr>
					<th>Nom</th>
					<th>Poste occupé</th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for team_member in team_members %}
					<tr>
						<td class="align-middle w-25">{{ team_member.name }}</td>
						<td class="align-middle w-100">{{ team_member.position }}</td>
						<td class="align-middle text-end">
								<a class="btn btn-outline-dark btn-sm text-nowrap px-3 my-2" href="{{ path('admin_team_member_edit', {'id': team_member.id}) }}">
									<i class="bi bi-pen"></i>
									Éditer
								</a>
								 
						</td>
						<td class="align-middle text-end">{{ include('admin/team_member/_delete_form.html.twig') }}</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="4">Aucun membre trouvé</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	{% endblock %}
