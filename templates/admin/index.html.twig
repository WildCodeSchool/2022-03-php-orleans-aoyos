{% extends 'admin/admin_base.html.twig' %}

{% block title %}
	{{ parent() }}
	- Accueil
{% endblock %}

{% block content %}
	<div class="container d-flex flex-column admin">
		<section class="reservations mb-4">
			<h1 class="mt-3 mb-2 ms-3">
				Nouvelles r√©servations</h1>
			<div class="row me-2 ms-2 mb-4 d-flex flex-row">
				{% for reservation in reservations %}
					<div class="col-md-5 col-lg-3 mx-auto my-4">
						<h5 class="px-2 py-2 card-title border border-dark bg-light text-dark w-fit mx-auto">{{ reservation.company }}</h5>
						<div class="card h-100 shadow border border-dark">
							<div class="card-body">
								<p class="card-text text-muted px-2"> Nom du client : {{ reservation.firstName }}
									{{ reservation.lastName }}</p>
								<p class="card-text px-2"> Formule : {{ reservation.formula }}</p>
								<p class="card-text px-2"> Date : {{ reservation.dateStart|date("m/d/Y") }}</p>
								<p class="card-text px-2 pb-3"> Location : {{ reservation.address }}</p>
							</div>
							<a href="#" class="btn btn-outline-dark mx-2 mb-2">Voir</a>
						</div>
					</div>
				{% endfor %}
			</div>
		</section>
		<section class="djs">
			<h1 class="mb-2 ms-3">
				Nouveaux Djs</h1>
			<div class="row me-2 ms-2">
				{% for artist in artists %}
					<div class="col-md-5 col-lg-3 mx-auto my-4">
							<h5 class="px-2 py-2 card-title border border-dark bg-light text-dark w-fit mx-auto">{{artist.firstname}}
								{{artist.lastname}}</h5>
						<div class="card h-100 shadow border border-dark">
							<div class="card-body">
								<h6 class="card-text mb-2 text-muted px-2 py-2">
									{{ artist.birthdate | date("d/m/Y") }}</h6>
								<p class="px-2 py-2">Adresse :
									{{ artist.address }}</p>
							</div>
							<a href="#" class="btn btn-outline-dark mx-2 mb-2">Voir</a>
						</div>
					</div>
				{% endfor %}
			</div>
		</section>
	</div>
{% endblock %}
