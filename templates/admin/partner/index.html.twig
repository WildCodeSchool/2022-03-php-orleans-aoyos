{% extends 'admin/admin_base.html.twig' %}

{% block title %}{{ parent() }} - Partenaires{% endblock %}

{% block content %}
<main class="container">
    <h1 class="my-5">Partenaires</h1>
   <div class="w-100 d-flex justify-content-end">
        <a class="btn btn-outline-dark px-3 me-2" href="{{ path('app_admin_partner_new') }}">
                <i class="bi bi-plus-square"></i>
        Ajouter</a>
    </div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Image</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for partner in partners %}
            <tr>           
                <td class="align-middle w-100"><img src="{{ partner.image }}" class="admin-table-image" alt="{{ partner.name }}"></td>
                <td class="align-middle text-end">
                    <a class="btn btn-outline-dark btn-sm text-nowrap px-3 my-2" href="{{ path('app_admin_partner_edit', {'id': partner.id}) }}">
                    <i class="bi bi-pen"></i>
                    Éditer</a></td>
                <td class="align-middle text-end">{{ include('admin/partner/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun partenaire trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</main>
{% endblock %}
