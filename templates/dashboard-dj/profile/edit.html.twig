{% extends 'dashboard-dj/dashboard_dj_base.html.twig' %}

{% block title %}
	{{ parent() }}
	- Profil
{% endblock %}

{% block content %}
	<main class="container">
		<h1 class="my-5">Profil</h1>

		{{ form_start(formBase) }}
		{{ form_start(formComplement) }}
		<div class="row d-flex justify-content-around">
			<div class="card base col-lg-5 py-3 my-3">
				{{ form_widget(formBase) }}
			</div>
			<div class="card complement col-lg-5 py-3 my-3">
				{{ form_widget(formComplement) }}
			</div>
		</div>
		<div class="d-flex justify-content-center">
			<button class="btn btn-dark my-4">
				<i class="bi bi-pen pe-2"></i>Modifier</button>
		</div>
		{{ form_end(formBase) }}
		{{ form_end(formComplement) }}

	</main>
{% endblock %}
