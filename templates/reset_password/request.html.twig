{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('login') }}
{% endblock %}

{% block title %}
{{ parent() }} -
Réinitialisation du mot de passe
{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
	<main class="login py-5">
		<div class="container d-flex flex-column align-items-center mt-5">
            <div class="block-color w-75 m-5 d-flex align-items-center flex-column">
                <h1 class="text-center h1-login py-5 position-relative">
                    <img src="{{ asset('build/images/title_underline_purple.png') }}" class="title-underline" alt="">
                    Réinitialisation du mot de passe</h1>
                {{ form_start(requestForm) }}
                {{ form_row(requestForm.email) }}
                <p>
                    Remplissez le champ ci-dessus et nous allons vous envoyer un mail pour réinitialiser votre mot de passe.
                </p>
                <div class="w-100 d-flex justify-content-center mb-5 pt-5">
                    <button class="btn btn-outline-primary bg-white fs-5 text-dark">Envoyer l'email de réinitialisation du mot de passe</button>
                </div>
                {{ form_end(requestForm) }}
            </div>
		</div>
	</main>
{% endblock %}
