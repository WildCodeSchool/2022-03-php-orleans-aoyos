{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('login') }}
{% endblock %}

{% block title %}
    {{ parent() }} - Réinitialiser votre mot de passe
{% endblock %}

{% block body %}
	<main class="login py-5">
		<div class="container d-flex flex-column align-items-center mt-5">
			<div class="block-color w-75 m-5 d-flex align-items-center flex-column">
				<h1 class="text-center h1-login py-5 position-relative">
					<img src="{{ asset('build/images/title_underline_purple.png') }}" class="title-underline" alt="">
					Réinitialiser votre mot de passe</h1>
				<div class="px-5 py-5 w-100">
                    {{ form_start(resetForm) }}
                        {{ form_row(resetForm.plainPassword) }}
                        <div class="w-100 d-flex justify-content-center mt-5">
                            <button class="btn btn-outline-primary bg-white fs-5 text-dark">Modifier le mot de passe</button>
                        </div>
                    {{ form_end(resetForm) }}
				</div>
			</div>
		</div>
	</main>
{% endblock %}
